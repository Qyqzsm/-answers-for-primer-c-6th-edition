#include<iostream>
#include<array>


int main()
{
	using namespace std;
	array<double, 3> grades;
	cout << "Please enter the 3 scores of 40-m running test: " << endl;
	
	for (int i = 0; i < 3; i++)
		cin >> grades[i];

	double avg = (grades[0] + grades[1] + grades[3]) / 3;

	for (int i = 0; i < 3; i++)
		cout <<++ i << ":" << grades[i] << endl;
	cout << "Avg=" << avg << endl;
	system("pause");
	return 0;
}
