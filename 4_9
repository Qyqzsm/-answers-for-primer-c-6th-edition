#include<iostream>
#include<string>
using namespace std;

struct candybar
{
	string name;
	double weight;
	int calorie;
};

int main()
{
	candybar *snacks = new candybar[3];
	for (int i = 0; i < 3; i++)
		snacks[i] = { "Mocha Munch",2.3,350 };
	for (int j = 0; j < 3; j++)
	{
		cout << "Name : " << snacks[j].name << endl;
		cout << "Weight : " << snacks[j].weight << endl;
		cout << "Calorie : " << snacks[j].calorie << endl;
	}
	delete []snacks;
	system("pause");
	return 0;
}
