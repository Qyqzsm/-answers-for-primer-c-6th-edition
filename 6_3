#include<iostream>

int main()
{

	using namespace std;
	//menu
	char ch;
	cout << "Please enter one of the following choices: \n";
	cout << "c) carnivore                  p) pianist" << endl;
	cout << "t) tree                       g) game" << endl;
	cout << "f" << endl;
	cout << "Please enter a, c, p, t or g: " << endl;

	while (cin >> ch)
	{
		
		switch (ch) 
		{
		case'c':
			cout << "A maple is a canivore"<< endl;
			cout << "Please enter a, c, p, t or g: " << endl;
			continue;
		case'p':cout << "A maple is a pianist" << endl;
			cout << "Please enter a, c, p, t or g: " << endl;
			continue;
		case't':cout << "A maple is a tree"  << endl;
			cout << "Please enter a, c, p, t or g: " << endl;
			continue;
		case'g':cout << "A maple is a game"  << endl;
			cout << "Please enter a, c, p, t or g: " << endl;
			continue;
		default:cout << "Please enter a, c, p, t or g: " << endl;
		}
		
	}
	system("pause");
	return 0;
}
